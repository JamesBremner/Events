{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "options": {
                "cwd": "${workspaceFolder}"
               },
            "command": "mingw32-make.exe",
            "args": [
                "-f",
                "makefile",
                "test"
            ],

            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "tcpserver",
            "options": {
                "cwd": "${workspaceFolder}"
               },
            "command": "mingw32-make.exe",
            "args": [
                "-f",
                "makefile",
                "tcpserver"
            ],

            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "tcpclient",
            "options": {
                "cwd": "${workspaceFolder}"
               },
            "command": "mingw32-make.exe",
            "args": [
                "-f",
                "makefile",
                "tcpclient"
            ],

            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
			"label": "alltcp",
			"dependsOrder": "sequence",
			"dependsOn": [
				"tcpserver",
				"tcpclient",
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		}
    ]
}